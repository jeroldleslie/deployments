#/lib/systemd/system/storm-zookeeper.service
[Unit]
Description=Storm Zookeeper Service
DefaultDependencies=no
After=local-fs.target systemd-tmpfiles-setup.service
Conflicts=shutdown.target
Before=sysinit.target shutdown.target
RefuseManualStop=no

[Service]
ExecStart=/opt/storm-zookeeper/bin/zkServer.sh start-foreground

[Install]
WantedBy=multi-user.target
